<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.2/angular.min.js"></script>
    <script src="/javascripts/main.js"></script>
</head>

<body ng-app="Yachtly">
    <div ng-controller="EditUserController" class="container container-table">
        <div ng-init="init('<%= user_id %>')"></div>
        <div class="row vertical-center-row">
            <div class="row">
                <div class="col-md-12 top-buffer">
                    <label>User ID</label>
                    <input type="text" class="span3" disabled="disabled" ng-model="user.userID">
                    <label>Name</label>
                    <input type="text" class="span3" ng-model="user.name">
                    <label>Email Address</label>
                    <input type="email" class="span3" ng-model="user.email">
                    <label>Phone Number</label>
                    <input type="number" class="span3" ng-model="user.phoneNumber">
                    <label>Address</label>
                    <input type="text" class="span3" ng-model="user.address">
                    <div class="clearfix top-buffer"></div>
                    <button class="btn btn-danger" onclick="window.history.go(-1)">Cancel</button>
                    <button class="btn btn-success" ng-click="submit(user)"><i class="icon-share-alt icon-white"></i> Submit</button>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
</body>

</html>